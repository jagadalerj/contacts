<div class="card contact-form-card">
  <div class="card-body p-0">
    <div class="tab-content">
      <div class="tab-pane show active p-3">
        <%= link_to fa_icon('arrow-right', text: "Back"), contact_lists_path, :remote => true, class: 'back-to-contact-listing col-md-12' %>
        <div class="row">
          <div class="col">
            <div data-simplebar class="contact-form-main" id="contact-form-main">
              <%= form_for(contact_list, url: url, remote: true) do |f| %>
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <%= f.text_field :name, class: 'form-control', id: "name", placeholder: "Name", autocomplete: "off" %>
                  <%= render partial: "error", locals: { errors: errors, key: 'name' } %>
                </div>
                <div class="mb-3">
                  <label for="number" class="form-label">Number</label>
                  <%= f.text_field :number, class: 'form-control', id: "number", placeholder: "Mobile Number", autocomplete: "off" %>
                  <%= render partial: "error", locals: { errors: errors, key: 'number' } %>
                </div>
                <%= f.submit 'save' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>