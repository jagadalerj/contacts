<div class="card contact-details-card">
  <div class="card-body p-0">
    <div class="tab-content">
      <div class="tab-pane show active p-3">
        <%= link_to fa_icon('arrow-right', text: "Back"), contact_lists_path, :remote => true, class: 'back-to-contact-listing col-md-12' %>
        <div class="row">
          <div class="col-md-10 col">
            <div data-simplebar class="contact-details-main" id="contact-details-main">
              <div><b>Name:</b> <%= contact_list&.name %></div>
              <div><b>Mobile Number:</b> <%= contact_list&.number %></div>
            </div>
          </div>
          <div class="col-md-2 overflow-hidden contact-list-item-edit-btn">
            <%= link_to fa_icon('trash'), contact_list_path(contact_list.id), :remote => true, method: :delete, data: {confirm: "Are you sure?"}, class: 'edit-contact-list col-md-2' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>